              <div class="col-lg-8">
                  <input id="taskTitle" name="taskTitle" class="form-control"></input>
              </div>
          </div>
          <!-- /.form-group -->

            <div class="form-group">
                <label for="taskPriority" class="control-label col-lg-4">Priority</label>

                <div class="col-lg-2">
