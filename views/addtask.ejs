                        <option value="<%= project.tasktypes[i]._id %>"><%= project.tasktypes[i].name %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <!-- /.form-group -->

            <div class="form-group">
                <label for="taskDescription" class="control-label col-lg-4">Description</label>

                <div class="col-lg-8">
                    <textarea id="taskDescription" name="taskDescription" class="form-control"></textarea>
                </div>
            </div>
            <!-- /.form-group -->

            <div class="form-group">
                <div class="col-lg-12">
