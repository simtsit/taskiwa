<div class="row">
    <div class="col-lg-12">
        <p class="col-lg-12">You have <%= projectsOwned %> project(s)! <a href="projects/add" class="btn btn-primary">Add Project</a></p>
            <% if (projects.length == 0 ) { %>
              <p>You have no Projects yet!</p>
              <% } else { %>
            <% for (var i=0; i < projects.length; i++) { %>
                <% if (projects[i].owner.username == user.username) { %>
                <div class="col-lg-2">
                    <div class="box">
                        <div class="body">
                            <strong><%= projects[i].name %></strong>
                	    </div>
                        <div class="body">
                            <%= projects[i].description %>
                        </div>
                        <div class="body">
                            Created: <%= projects[i].created.date %> <%= projects[i].created.time %>
                        </div>
                        <div class="body text-right">
                            <a href="/projects/view/<%= projects[i]._id %>" class="btn btn-success">Open</a>
                            <!-- <a href="projects/view/<%= projects[i]._id %>" class="btn btn-primary"><i class="fa fa-users"></i></a>
                            <a href="projects/view/<%= projects[i]._id %>" class="btn btn-warning"><i class="fa fa-gears"></i></a> -->
                            <a href="/projects/edit/<%= projects[i]._id %>" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                            <a href="/projects/moveProjectToTrash/<%= projects[i]._id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
                	    </div>
                	</div>
                </div>
            <% } %>
        <% } %>
    <% } %>
        </div>
    </div>
