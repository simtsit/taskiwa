<% include ../views/layouts/header %>
<% include ../views/layouts/menu %>
                    </div>
                    <!-- /#left -->
                <div id="content">
                    <div class="outer col-lg-12">
                        <div class="inner bg-light lter">
                            <div class="text-center">
                                <h2>Project View - Mettis (minimal)</h2> <a href="/projects/addtask/<%= project.id %>" class="btn btn-primary">Add Task</a>
                            </div>
                            <br>
                            <table class="table table-striped table-hover">
                                <tr>
                                    <th>#</th>
                                    <th>title</th>
                                    <th>priority</th>
                                    <th>duration</th>
                                    <th>status</th>
                                    <th>loc.x</th>
                                    <th>loc.y</th>
                                    <th>task type</th>
                                    <th>color</th>
                                    <th>created.date</th>
                                    <th>created.time</th>
                                    <th>creator</th>
                                    <th></th>
                                </tr>
                                <% var count=0; %>
                                <% for ( var i=0; i< project.tasks.length; i++) { %>
                                    <% if (project.tasks[i].status == 'active') { %>
                                        <tr>
                                            <td><%= ++count %></td>
                                            <td><%= project.tasks[i].title %></td>
                                            <td><%= project.tasks[i].priority %></td>
                                            <td><%= project.tasks[i].duration %></td>
                                            <td><%= project.tasks[i].status %></td>
                                            <td><%= project.tasks[i].loc.x %></td>
                                            <td><%= project.tasks[i].loc.y %></td>
                                            <td><%= project.tasks[i].type.name %></td>
                                            <td><%= project.tasks[i].type.color %></td>
                                            <td><%= project.tasks[i].created.date %></td>
                                            <td><%= project.tasks[i].created.time %></td>
                                            <td><%= project.tasks[i].creator.username %></td>
                                            <td><a href="/projects/view/<%= project._id %>/<%= project.tasks[i]._id %>" class="btn btn-success btn-sm">Open</a> <a href="/projects/edittask/<%= project._id %>/<%= project.tasks[i]._id %>" class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></a>
                                            <form method="post" action="/projects/moveTaskToTrash/<%= project._id %>/<%= project.tasks[i]._id %>"><button type="submit" href="#" class="btn btn-danger btn-sm">del</button></form>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } %>

                            </table>

                        </div>
                        <!-- /.inner -->
                    </div>
                    <!-- /.outer -->

                      </div>
                    </div>
                </div>
                <!-- /#content -->
            </div>
            <!-- /#wrap -->
